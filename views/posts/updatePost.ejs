<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Fontawesome -->
    <script
      src="https://kit.fontawesome.com/e00551a653.js"
      crossorigin="anonymous"
    ></script>
    <!-- CSS -->
    <link rel="stylesheet" href="/css/form.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>update post</title>
  </head>
  <body>
    <%- include("../partials/header.ejs") %>
    <div class="form-container">
      <!-- icon -->
      <h1>
        Update Post
        <!-- add icon -->
        <i class="fas fa-plus"></i>
      </h1>
      <% if (error) { %>
      <small class="error">
        <i class="fas fa-exclamation-circle"><%= error %></i>
      </small>
      <% } %>

      <form
        action="/api/v1/posts/<%= post?._id %>?_method=PUT"
        method="POST"
        enctype="multipart/form-data"
      >
        <!-- Post Title -->
        <div class="input-wrapper">
          <label for="name">Post Title</label>
          <input
            type="text"
            name="title"
            id="name"
            value="<%= post?.title %>"
          />
          <!-- err -->
        </div>

        <!-- Category -->
        <div class="input-wrapper">
          <label for="category">Category</label>
          <select name="category" id="category" value="<%= post?.category %>">
            <option value="Travel">Travel</option>
            <option value="Tech or Gadgets">Tech or Gadgets</option>
            <option value="Business">Business</option>
            <option value="Health & Wellness">Health & Wellness</option>
            <option value="Coder">Coder</option>
            <option value="Other">Other</option>
          </select>
          <!-- err -->
        </div>
        <div class="input-wrapper">
          <!-- Post Body -->
          <label for="body">Post Body</label>
          <textarea name="description" id="body" cols="30" rows="10">
<%= post?.description %></textarea
          >
          <!-- err -->
        </div>
        <!-- Post Image -->
        <div class="input-wrapper">
          <label for="image">Post Image</label>
          <input type="file" name="updateImage" id="image" />
          <!-- err -->
        </div>

        <button type="submit">Update</button>
      </form>
    </div>
    <%- include("../partials/footer.ejs") %>
  </body>
</html>
